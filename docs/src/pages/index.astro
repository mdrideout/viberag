// React islands (interactive, hydrated with JS)
import AgentDemo from '../components/homepage/AgentDemo.tsx';
import VibeDemo from '../components/homepage/VibeDemo.tsx';

import '../styles/global.css';

// Static data
const EDITORS = [
  "Claude Code", "Cursor", "Gemini CLI", "JetBrains IDEs", "OpenAI Codex",
  "OpenCode", "Roo Code", "VS Code Copilot", "Windsurf", "Zed", "and others..."
];

const TOOLS = [
  { name: "codebase_search", desc: "Semantic, keyword, or hybrid search." },
  { name: "codebase_parallel_search", desc: "Run multiple search strategies simultaneously." },
  { name: "viberag_index", desc: "Manually trigger indexing (usually automatic)." },
  { name: "viberag_status", desc: "Get index health and stats." },
  { name: "viberag_watch_status", desc: "Check file watcher status." },
];

const LANGUAGES = [
  { name: "JavaScript", ext: ".js, .mjs, .cjs" },
  { name: "TypeScript", ext: ".ts, .mts, .cts" },
  { name: "TSX", ext: ".tsx" },
  { name: "Python", ext: ".py" },
  { name: "Go", ext: ".go" },
  { name: "Rust", ext: ".rs" },
  { name: "Java", ext: ".java" },
  { name: "C#", ext: ".cs" },
  { name: "Swift", ext: ".swift" },
  { name: "Kotlin", ext: ".kt, .kts" },
  { name: "PHP", ext: ".php" },
  { name: "Dart", ext: ".dart" },
];
